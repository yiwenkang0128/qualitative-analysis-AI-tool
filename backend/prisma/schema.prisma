generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://yiwenkang@localhost:5432/anti_displacement_db?schema=public"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      String     @default("user") 
  createdAt DateTime   @default(now())
  documents Document[] 
}

model Document {
  id              String         @id @default(uuid())
  originalName    String
  serverFilename  String         @unique
  title           String         @default("Untitled Chat")
  fullText        String
  summary         String?
  topicsJson      String?
  createdAt       DateTime       @default(now())
  
  userId          String         
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  chats           ChatHistory[]  
}

model ChatHistory {
  id              String        @id @default(uuid())
  documentId      String
  document        Document      @relation(fields: [documentId], references: [id], onDelete: Cascade)
  role            String
  content         String
  createdAt       DateTime      @default(now())
}